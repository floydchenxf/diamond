<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.floyd.diamond" >

    <application
        android:name=".DiamodApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:label="@string/app_name">
        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/Transparent" />
        <activity
            android:name=".ui.activity.RegActivity"
            android:label="@string/title_activity_reg"
            android:theme="@style/Transparent" />
        <activity
            android:name=".ui.activity.PhoneLoginActivity"
            android:label="@string/title_activity_phone_login"
            android:theme="@style/Transparent" />
        <activity
            android:name=".ui.activity.ResetPasswordActivity"
            android:label="@string/title_activity_reset_password"
            android:theme="@style/Transparent" />
        <activity
            android:name=".ui.activity.Reg2Activity"
            android:label="@string/title_activity_reg2" >
        </activity>
        <activity android:name=".ui.activity.HomeChooseActivity"/>
        <activity android:name=".ui.activity.ChooseActivity"/>
        <activity android:name=".ui.activity.GuideActivity"/>
        <activity android:name=".ui.activity.MessageItemActivity"/>
        <activity android:name=".ui.activity.ModelInfoActivity"/>
        <activity android:name=".ui.activity.ModelPersonActivity"/>
    </application>

</manifest>
