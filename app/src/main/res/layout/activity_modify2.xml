<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee">
    <TextView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="修改账号"
        android:textColor="#fff"
        android:textSize="18sp"
        android:background="#d4377e"
        android:gravity="center"
        android:drawableLeft="@drawable/jiantou_back"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">
        <EditText
            android:id="@+id/newphoneNum"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:hint="输入新账号"
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:inputType="number"
            android:textColorHint="#E1E1E1"
            android:gravity="center_vertical"
            android:background="@drawable/xg_button_bg2"/>
        <EditText
            android:id="@+id/newPass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:hint="输入新密码"
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:textColorHint="#E1E1E1"
            android:gravity="center_vertical"
            android:background="@drawable/xg_button_bg2"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <EditText
                android:id="@+id/new_check_code"
                android:layout_width="140dp"
                android:layout_height="44dp"
                android:background="@drawable/xg_button_bg2"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:hint="接收验证码"
                android:textColorHint="#E1E1E1"
                android:inputType="number"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/check_code_button"
                android:layout_width="140dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@drawable/gray_button_bg_nor"
                android:text="获取验证码"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </RelativeLayout>
        <TextView
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/gray_button_bg_nor"
            android:text="确认"
            android:textSize="13sp"
            android:textColor="#fff"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>