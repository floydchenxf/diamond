<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.floyd.diamond.bean.MyScrollView
            android:id="@+id/myscrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/message_bg"
                    android:layout_width="match_parent"
                    android:layout_height="197dp"
                    android:background="#d4377e"
                    />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_bg"
                    />
                <ImageView
                    android:id="@+id/meg_touxiang"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/round_bg"
                    android:layout_marginTop="10dp"
                     />
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/circle_shape"
                    android:layout_marginTop="10dp"
                     />

                <TextView
                    android:id="@+id/message_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/meg_touxiang"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="商家通告"
                    android:textColor="#fff"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/message_dian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/message_name"
                    android:src="@drawable/dian_1"
                    android:layout_marginTop="5dp"
                    />

                <com.floyd.diamond.bean.MyListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/message_dian"
                    android:divider="#00000000"
                    android:dividerHeight="10dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:layout_marginTop="11dp" />

            </RelativeLayout>
        </com.floyd.diamond.bean.MyScrollView>

    </RelativeLayout>

    <include layout="@layout/diamod_data_loading" />

</LinearLayout>

