<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentFrameLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="#d4377e">

        <LinearLayout
            android:id="@+id/left"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dip"
                android:background="@drawable/jiantou_back"/>
        </LinearLayout>

        <TextView
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="个人资料"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dip"
            android:text="编辑"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </com.zhy.android.percent.support.PercentFrameLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:orientation="vertical"
        app:layout_heightPercent="31%"
        app:layout_marginTopPercent="1%">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="35%">

            <TextView
                android:id="@+id/touxiang_personinfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="头像"
                app:layout_marginLeftPercent="4%"
                android:onClick="click"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_shape"
                app:layout_heightPercent="87%"
                app:layout_marginRightPercent="4%"
                app:layout_widthPercent="15%"
                android:onClick="click"/>

        </com.zhy.android.percent.support.PercentRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33000000"
            app:layout_marginLeftPercent="2%" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="昵称"
            app:layout_marginLeftPercent="4%" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33000000"
            app:layout_marginLeftPercent="2%" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/jiantou_next"
            android:gravity="center_vertical"
            android:text="性别"
            app:layout_marginLeftPercent="4%"
            app:layout_marginRightPercent="4%"
            android:onClick="click"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33000000"
            app:layout_marginLeftPercent="2%" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/jiantou_next"
            android:gravity="center_vertical"
            android:text="出生年月"
            app:layout_marginLeftPercent="4%"
            app:layout_marginRightPercent="4%"
            android:onClick="click"/>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:orientation="vertical"
        app:layout_heightPercent="20%"
        app:layout_marginTopPercent="2%">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="身型"
            app:layout_marginLeftPercent="4%"
            app:layout_marginRightPercent="4%"
            android:drawableRight="@drawable/jiantou_next"
            android:onClick="click"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33000000"
            app:layout_marginLeftPercent="2%" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="职业"
            app:layout_marginLeftPercent="4%"
            app:layout_marginRightPercent="4%"
            android:drawableRight="@drawable/jiantou_next"
            android:onClick="click"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33000000"
            app:layout_marginLeftPercent="2%" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="适合主题"
            app:layout_marginLeftPercent="4%"
            app:layout_marginRightPercent="4%"
            android:drawableRight="@drawable/jiantou_next"
            android:onClick="click"/>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:orientation="vertical"
        app:layout_heightPercent="25%"
        app:layout_marginTopPercent="2%">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="微信号"
            app:layout_marginLeftPercent="4%" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33000000"
            app:layout_marginLeftPercent="2%" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="支付宝账号"
            app:layout_marginLeftPercent="4%"
            app:layout_marginRightPercent="4%" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33000000"
            app:layout_marginLeftPercent="2%" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="收货地址"
            app:layout_marginLeftPercent="4%"
            app:layout_marginRightPercent="4%"
            android:drawableRight="@drawable/jiantou_next"
            android:onClick="click"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33000000"
            app:layout_marginLeftPercent="2%" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="实名认证"
                app:layout_marginLeftPercent="4%"
                app:layout_marginRightPercent="4%" />

            <TextView
                android:id="@+id/renzheng"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="未认证"
                android:textColor="#d0021b"
                android:textSize="10sp"
                app:layout_marginRightPercent="4%" />

        </com.zhy.android.percent.support.PercentRelativeLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>