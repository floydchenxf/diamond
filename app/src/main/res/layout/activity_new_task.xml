<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/task_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="#55000000">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dip"
                android:background="@drawable/jiantou_back"/>
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/default_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/tuqian" />

    <LinearLayout
        android:id="@+id/new_task_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#eeeeee">

        <CheckedTextView
            android:id="@+id/new_task_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/common_button"
            android:checked="true"
            android:gravity="center"
            android:text="抢单"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/task_price_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/new_task_button_layout"
        android:layout_centerInParent="true"
        android:layout_marginTop="6dp"
        android:background="#55000000"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/goodsinfo_price"
            android:drawablePadding="4dp"
            android:text="40"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/shot_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/goodslist_money"
                android:drawablePadding="4dp"
                android:text="80"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/self_buy_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/goodsinfo_zigoulv"
                android:drawablePadding="4dp"
                android:text="70"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/shot_area_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/goodsinfo_address"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="黑龙."
            android:textColor="@color/white"
            android:textSize="12sp" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/task_required_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/task_price_layout"
        android:background="#55000000"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:text="拍摄要求"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/task_shot_required"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="拍摄要求"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/task_required_layout"
        android:layout_marginBottom="8dp"
        android:background="#55000000"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:text="商品名称"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/task_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="商品名称"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <include layout="@layout/diamod_data_loading"/>
</RelativeLayout>
