<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/task_info_summary"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:drawableRight="@drawable/jiantou_down"
        android:gravity="center"
        android:text="任务详情"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <RelativeLayout
        android:id="@+id/task_info_detail_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_info_summary"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/task_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/tuqian" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/task_image"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="任务名称"
                android:textColor="#666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/task_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务名称"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#666666"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="4dp"
                android:text="任务要求"
                android:textColor="#666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/task_shot_required"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="任务要求"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/goods_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/goodslist_price_black"
                    android:drawablePadding="4dp"
                    android:text="70"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/goods_shot_fee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/goodslist_money_black"
                    android:drawablePadding="4dp"
                    android:text="70"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/goods_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/goodslist_address_black"
                    android:drawablePadding="4dp"
                    android:text="黑龙江"
                    android:textSize="10sp" />

            </LinearLayout>


        </LinearLayout>

        <CheckedTextView
            android:id="@+id/goods_link"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:background="@drawable/common_round_red_bg"
            android:checked="true"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="商品详情"
            android:textColor="@color/white"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/jiantou_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="6dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/jiantou_up" />
    </RelativeLayout>

</RelativeLayout>