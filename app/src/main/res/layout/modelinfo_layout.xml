<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#d4377e"
        android:orientation="vertical"
        app:layout_heightPercent="25%">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_marginTopPercent="9%">

            <TextView
                android:id="@+id/back"
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:background="@drawable/jiantou_back"
                app:layout_marginLeftPercent="3%" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="YOYO"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/share_nomal"
                app:layout_marginRightPercent="3%" />

        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            app:layout_heightPercent="52%"
            app:layout_marginLeftPercent="3%"
            app:layout_widthPercent="72%">

            <ImageView
                android:id="@+id/touxaing"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/circle_shape"
                app:layout_widthPercent="30%" />

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_marginLeftPercent="3%"
                app:layout_widthPercent="39%">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#fff"
                    app:layout_heightPercent="15%" />

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_marginTopPercent="7%">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="信誉度："
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/xinyudu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.9"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </com.zhy.android.percent.support.PercentLinearLayout>

            </com.zhy.android.percent.support.PercentLinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="#ffffff"
                app:layout_heightPercent="52%"
                app:layout_marginLeftPercent="3%" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="已关注"
                android:textColor="#d4377e"
                android:textSize="12sp"
                app:layout_heightPercent="27%"
                app:layout_marginLeftPercent="3%"
                app:layout_widthPercent="23%" />
        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        app:layout_heightPercent="7%">

        <TextView
            android:id="@+id/moreInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/jiantou_next"
            android:gravity="center_vertical"
            android:text="更多详情"
            android:textSize="10sp"
            app:layout_marginLeftPercent="2%"
            app:layout_marginRightPercent="2%" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/m1"
        app:layout_marginTopPercent="2%" />

</com.zhy.android.percent.support.PercentLinearLayout>
