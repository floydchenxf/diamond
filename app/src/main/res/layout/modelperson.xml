<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#d4377e"
        android:orientation="vertical"
        app:layout_heightPercent="25%">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_marginTopPercent="9%">

            <TextView
                android:id="@+id/back"
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                app:layout_marginLeftPercent="3%"
                android:background="@drawable/jiantou_back"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="YOYO"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/share"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/share_nomal"
                app:layout_marginRightPercent="3%"
                />

        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            app:layout_heightPercent="52%"
            app:layout_marginLeftPercent="3%"
            app:layout_widthPercent="72%">

            <ImageView
                android:id="@+id/touxaing"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/circle_shape"
                app:layout_widthPercent="30%" />

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_marginLeftPercent="3%"
                app:layout_widthPercent="39%">

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_marginTopPercent="7%">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="经验值："
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/jingyanzhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.9"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp"
                        android:textSize="12sp" />
                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_marginTopPercent="7%">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="信誉度："
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/xinyudu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.9"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp"
                        android:textSize="12sp" />
                </com.zhy.android.percent.support.PercentLinearLayout>

            </com.zhy.android.percent.support.PercentLinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="#ffffff"
                app:layout_heightPercent="52%"
                app:layout_marginLeftPercent="3%" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="已关注"
                android:textColor="#d4377e"
                android:textSize="12sp"
                app:layout_heightPercent="27%"
                app:layout_marginLeftPercent="3%"
                app:layout_widthPercent="23%" />
        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="4%"
        android:background="#ffffff"
        app:layout_marginTopPercent="1%">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="信誉详情"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:textColor="#7e7e7e"
            app:layout_marginLeftPercent="3%"/>
    </com.zhy.android.percent.support.PercentLinearLayout>


    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginTop="1dp"
        >
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="13%">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务完成"
                android:textSize="12sp"
                android:textColor="#7e7e7e"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.9"
                android:textSize="12sp"
                android:textColor="#7e7e7e"
                app:layout_marginLeftPercent="3%"/>
        </com.zhy.android.percent.support.PercentLinearLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="13%"
            app:layout_marginTopPercent="4%">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推广值"
                android:textSize="12sp"
                android:textColor="#7e7e7e"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.9"
                android:textSize="12sp"
                android:textColor="#7e7e7e"
                app:layout_marginLeftPercent="3%"/>
        </com.zhy.android.percent.support.PercentLinearLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="13%"
            app:layout_marginTopPercent="4%">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自购率"
                android:textSize="12sp"
                android:textColor="#7e7e7e"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.9"
                android:textSize="12sp"
                android:textColor="#7e7e7e"
                app:layout_marginLeftPercent="3%"
                />
        </com.zhy.android.percent.support.PercentLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="4%"/>

    </com.zhy.android.percent.support.PercentLinearLayout>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="4%"
        android:background="#ffffff"
        app:layout_marginTopPercent="1%">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="模特详情"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:textColor="#7e7e7e"
            app:layout_marginLeftPercent="3%"/>
    </com.zhy.android.percent.support.PercentLinearLayout>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginTop="1dp">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="13%"
            app:layout_marginTopPercent="6%"
            android:layout_marginTop="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textSize="10sp"
                android:textColor="#989898"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:textSize="10sp"
                android:textColor="#505050"
                app:layout_marginLeftPercent="3%"
                />
        </com.zhy.android.percent.support.PercentLinearLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="13%"
            app:layout_marginTopPercent="2%"
            android:layout_marginTop="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年龄"
                android:textSize="10sp"
                android:textColor="#989898"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24"
                android:textSize="10sp"
                android:textColor="#505050"
                app:layout_marginLeftPercent="3%"
                />
        </com.zhy.android.percent.support.PercentLinearLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="13%"
            app:layout_marginTopPercent="2%"
            android:layout_marginTop="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身高"
                android:textSize="10sp"
                android:textColor="#989898"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="180"
                android:textSize="10sp"
                android:textColor="#505050"
                app:layout_marginLeftPercent="3%"
                />
        </com.zhy.android.percent.support.PercentLinearLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="13%"
        app:layout_marginTopPercent="2%"
        android:layout_marginTop="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体重"
            android:textSize="10sp"
            android:textColor="#989898"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="44kg"
            android:textSize="10sp"
            android:textColor="#505050"
            app:layout_marginLeftPercent="3%"
            />
    </com.zhy.android.percent.support.PercentLinearLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="13%"
            app:layout_marginTopPercent="2%"
            android:layout_marginTop="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三围"
                android:textSize="10sp"
                android:textColor="#989898"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="33—22-44"
                android:textSize="10sp"
                android:textColor="#505050"
                app:layout_marginLeftPercent="3%"
                />
        </com.zhy.android.percent.support.PercentLinearLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="13%"
            app:layout_marginTopPercent="2%"
            android:layout_marginTop="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身型"
                android:textSize="10sp"
                android:textColor="#989898"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="苗条"
                android:textSize="10sp"
                android:textColor="#505050"
                app:layout_marginLeftPercent="3%"
                />
        </com.zhy.android.percent.support.PercentLinearLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="13%"
            app:layout_marginTopPercent="2%"
            android:layout_marginTop="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="职业"
                android:textSize="10sp"
                android:textColor="#989898"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文员"
                android:textSize="10sp"
                android:textColor="#505050"
                app:layout_marginLeftPercent="3%"
                />
        </com.zhy.android.percent.support.PercentLinearLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="13%"
            app:layout_marginTopPercent="2%"
            android:layout_marginTop="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="适合主题"
                android:textSize="10sp"
                android:textColor="#989898"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欧美风"
                android:textSize="10sp"
                android:textColor="#505050"
                app:layout_marginLeftPercent="3%"
                />
        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>



</com.zhy.android.percent.support.PercentLinearLayout>