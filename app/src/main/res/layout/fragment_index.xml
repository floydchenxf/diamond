<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentFrameLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="#d4377e">

        <TextView
            android:id="@+id/guide"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="10dip"
            android:background="@drawable/wenhao"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="全民模特"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dip"
            android:text="筛选模特"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </com.zhy.android.percent.support.PercentFrameLayout>


    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="35%">

        <android.support.v4.view.ViewPager
            android:id="@+id/index_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignBottom="@+id/index_pager"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/img_home_pager_tips1"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@color/tips2" />

            <ImageView
                android:id="@+id/img_home_pager_tips2"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:scaleType="fitXY"
                android:src="@color/tips1" />

            <ImageView
                android:id="@+id/img_home_pager_tips3"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:scaleType="fitXY"
                android:src="@color/tips1" />

            <ImageView
                android:id="@+id/img_home_pager_tips4"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:scaleType="fitXY"
                android:src="@color/tips1" />

            <ImageView
                android:id="@+id/img_home_pager_tips5"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:scaleType="fitXY"
                android:src="@color/tips1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_home"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginLeft="5dp"
            android:scrollbars="vertical" />
    </LinearLayout>

    <com.floyd.pullrefresh.widget.PullToRefreshListView
        android:id="@+id/pic_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />


</com.zhy.android.percent.support.PercentLinearLayout>
